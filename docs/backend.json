
{
  "entities": {
    "Product": {
      "title": "Product",
      "description": "A product available in the store",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the product in Arabic"
        },
        "nameEn": {
          "type": "string",
          "description": "The name of the product in English"
        },
        "price": {
          "type": "number",
          "description": "The original price of the product"
        },
        "discountPercentage": {
          "type": "number",
          "description": "The discount percentage (0-100)",
          "default": 0
        },
        "category": {
          "type": "string",
          "description": "The category slug (e.g., makeup, skincare)"
        },
        "categoryName": {
          "type": "string",
          "description": "The display name of the category in Arabic"
        },
        "categoryNameEn": {
          "type": "string",
          "description": "The display name of the category in English"
        },
        "imageUrl": {
          "type": "string",
          "description": "The URL of the product image"
        },
        "description": {
          "type": "string",
          "description": "A detailed description of the product"
        },
        "descriptionEn": {
          "type": "string",
          "description": "English description"
        },
        "details": {
          "type": "string",
          "description": "Technical details in Arabic"
        },
        "detailsEn": {
          "type": "string",
          "description": "Technical details in English"
        },
        "stock": {
          "type": "number",
          "description": "Current inventory level"
        },
        "isHidden": {
          "type": "boolean",
          "description": "Whether the product is hidden from the public store"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "When the product was added"
        }
      },
      "required": [
        "name",
        "price",
        "category",
        "imageUrl"
      ]
    },
    "Category": {
      "title": "Category",
      "description": "Product categories managed by admin",
      "type": "object",
      "properties": {
        "nameAr": {
          "type": "string",
          "description": "Arabic name of the category"
        },
        "nameEn": {
          "type": "string",
          "description": "English name of the category"
        },
        "slug": {
          "type": "string",
          "description": "URL friendly identifier"
        },
        "displayOrder": {
          "type": "number",
          "description": "Sort order for display"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "nameAr",
        "slug"
      ]
    },
    "UserProfile": {
      "title": "User Profile",
      "description": "Additional information for customers",
      "type": "object",
      "properties": {
        "fullName": {
          "type": "string",
          "description": "Customer full name"
        },
        "phoneNumber": {
          "type": "string",
          "description": "Customer phone number"
        },
        "address": {
          "type": "string",
          "description": "Delivery address"
        },
        "email": {
          "type": "string",
          "description": "Customer email"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "HeroImage": {
      "title": "Hero Image",
      "description": "Promotional banners for the hero section",
      "type": "object",
      "properties": {
        "imageUrl": {
          "type": "string",
          "description": "URL of the hero image"
        },
        "title": {
          "type": "string"
        },
        "active": {
          "type": "boolean"
        }
      }
    },
    "ShippingRates": {
      "title": "Shipping Rates",
      "description": "Shipping prices per US state",
      "type": "object",
      "properties": {
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "additionalProperties": { "type": "number" }
    },
    "Order": {
      "title": "Order",
      "description": "A customer order",
      "type": "object",
      "properties": {
        "customerInfo": {
          "type": "object",
          "properties": {
            "fullName": { "type": "string" },
            "phone": { "type": "string" },
            "city": { "type": "string" },
            "address": { "type": "string" }
          }
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "price": { "type": "number" },
              "quantity": { "type": "number" }
            }
          }
        },
        "totalPrice": { "type": "number" },
        "status": { 
          "type": "string", 
          "enum": ["pending", "processing", "shipped", "delivered", "cancelled"] 
        },
        "paymentMethod": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "userId": { "type": "string" },
        "legal_consent": {
          "type": "object",
          "properties": {
            "agreedToTerms": { "type": "boolean" },
            "version": { "type": "string" },
            "timestamp": { "type": "string", "format": "date-time" }
          }
        }
      }
    }
  },
  "auth": {
    "providers": [
      "google.com",
      "password",
      "phone"
    ]
  },
  "firestore": {
    "/products/{productId}": {
      "schema": "Product",
      "description": "PUBLIC_READ: Allow any user to read products. ADMIN_WRITE: Restricted to mohammad.dd.my@gmail.com or phone +962780334074."
    },
    "/categories/{categoryId}": {
      "schema": "Category",
      "description": "PUBLIC_READ: All can view categories. ADMIN_WRITE: Restricted to mohammad.dd.my@gmail.com or phone +962780334074."
    },
    "/users/{userId}": {
      "schema": "UserProfile",
      "description": "OWNER_ONLY: Users can read/write their own data. UNIQUE_PHONE_CHECK: Allow collection-level query on phoneNumber field for validation purposes."
    },
    "/siteSettings/heroSection": {
      "schema": "HeroImage",
      "description": "PUBLIC_READ: Visible to all. ADMIN_WRITE: Restricted to mohammad.dd.my@gmail.com or phone +962780334074."
    },
    "/siteSettings/shipping": {
      "schema": "ShippingRates",
      "description": "PUBLIC_READ: Visible to all. ADMIN_WRITE: Restricted to mohammad.dd.my@gmail.com or phone +962780334074."
    },
    "/orders/{orderId}": {
      "schema": "Order",
      "description": "ADMIN_READ: Restricted to admin. OWNER_WRITE: Any user can create an order."
    }
  }
}
