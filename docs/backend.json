
{
  "entities": {
    "Product": {
      "title": "Product",
      "description": "A product available in the store",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the product"
        },
        "price": {
          "type": "number",
          "description": "The price of the product"
        },
        "category": {
          "type": "string",
          "description": "The category slug (e.g., makeup, skincare)"
        },
        "categoryName": {
          "type": "string",
          "description": "The display name of the category"
        },
        "imageUrl": {
          "type": "string",
          "description": "The URL of the product image"
        },
        "description": {
          "type": "string",
          "description": "A detailed description of the product"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "When the product was added"
        }
      },
      "required": [
        "name",
        "price",
        "category",
        "imageUrl"
      ]
    },
    "UserProfile": {
      "title": "User Profile",
      "description": "Additional information for customers",
      "type": "object",
      "properties": {
        "fullName": {
          "type": "string",
          "description": "Customer full name"
        },
        "phoneNumber": {
          "type": "string",
          "description": "Customer phone number"
        },
        "address": {
          "type": "string",
          "description": "Delivery address"
        },
        "email": {
          "type": "string",
          "description": "Customer email"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "HeroImage": {
      "title": "Hero Image",
      "description": "Promotional banners for the hero section",
      "type": "object",
      "properties": {
        "imageUrl": {
          "type": "string",
          "description": "URL of the hero image"
        },
        "title": {
          "type": "string"
        },
        "active": {
          "type": "boolean"
        }
      }
    }
  },
  "auth": {
    "providers": [
      "google.com",
      "password",
      "phone"
    ]
  },
  "firestore": {
    "/products/{productId}": {
      "schema": "Product",
      "description": "Collection of products in the store"
    },
    "/users/{userId}": {
      "schema": "UserProfile",
      "description": "Customer profiles and delivery information"
    },
    "/hero_images/{heroId}": {
      "schema": "HeroImage",
      "description": "Banners for the main landing page"
    }
  }
}
